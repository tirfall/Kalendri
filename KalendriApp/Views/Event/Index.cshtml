@model IEnumerable<KalenderApp.Models.Event>

@{
    ViewData["Title"] = "Kalender";
}

<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>

    <!-- Header Navigation -->
    <header>
        <h1>Kalender</h1>
        <nav class="nav-links">
            <a href="/Home/Index">Avaleht</a>
            <a href="/Event/Index">Kalender</a>
            <a href="/Account/Login">Logi sisse</a>
            <a href="/Account/Register">Registreeru</a>
            <a href="@Url.Action("Logout", "Account")">Logi välja</a>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <h2 class="title">Kalender</h2>
        <a href="/Event/Create" class="btn btn-success create-btn">Loo uus sündmus</a>

        <table class="event-table">
            <thead>
                <tr>
                    <th>Pealkiri</th>
                    <th>Kirjeldus</th>
                    <th>Algus</th>
                    <th>Lõpp</th>
                    <th>Kategooria</th>
                    <th>Toimingud</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var evnt in Model)

                {
                    <tr>
                        <td>@evnt.Title</td>
                        <td>@evnt.Description</td>
                        <td>@evnt.StartDateTime</td>
                        <td>@evnt.EndDateTime</td>
                        <td>@evnt.Category?.Name</td>
                        <td>
                            <a href="/Event/Delete/@evnt.Id" class="btn btn-danger btn-sm">Kustuta</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Styles -->
    <style>
        /* Container Styling */
        .container {
            margin: 20px auto;
            max-width: 800px;
            padding: 20px;
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            color: #333;
        }


        h1 {
            color: #007bff;
        }

        /* Title Styling */
        .title {
            text-align: center;
            color: #333;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        /* Button Styling */
        .create-btn {
            display: inline-block;
            margin-bottom: 15px;
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            font-size: 1rem;
        }

            .create-btn:hover {
                background-color: #218838;
            }

        /* Table Styling */
        .event-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border: 1px solid #ddd;
        }

            .event-table th, .event-table td {
                padding: 15px;
                border: 1px solid #ddd;
                text-align: left;
            }

            .event-table th {
                background-color: #f8f9fa;
                color: #495057;
            }

            .event-table td {
                background-color: #fff;
                color: #495057;
            }

            .event-table tr:hover {
                background-color: #f1f1f1;
            }

        /* Action Button Styling */
        .btn-warning, .btn-danger {
            padding: 6px 12px;
            border-radius: 5px;
            color: white;
            cursor: pointer;
            text-decoration: none;
            font-size: 0.9rem;
            margin-right: 5px;
        }

        .btn-warning {
            background-color: #ffc107;
        }

            .btn-warning:hover {
                background-color: #e0a800;
            }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }
        /* General Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e9f4fc;
            color: #444;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        /* Header Styles */
        header {
            width: 100%;
            max-width: 900px;
            background-color: #ffffff;
            padding: 15px 25px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            header h1 {
                font-size: 1.8rem;
                color: #0077b6;
            }

        /* Navigation Links */
        .nav-links {
            display: flex;
            gap: 15px;
        }

            .nav-links a {
                color: #0077b6;
                text-decoration: none;
                font-weight: 500;
                padding: 8px 12px;
                border-radius: 4px;
                transition: background-color 0.2s ease;
            }

                .nav-links a:hover {
                    background-color: #caf0f8;
                }
    </style>
</body>
</html>
